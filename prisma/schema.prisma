// ===============================
// GENERATOR & DATASOURCE
// ===============================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===============================
// ENUMS
// ===============================

enum IndustryType {
  COMIDA
  SERVICIO
  RETAIL
  TECNICO
}

enum AuditStatus {
  PROYECTO
  EN_MARCHA
}

enum TaxStatus {
  INFORMAL
  RESICO
  PERSONA_FISICA
  PERSONA_MORAL
}

enum DiagnosticCategory {
  RENTABILIDAD
  RIESGO
  MERCADO
  OPERACION
}

enum MessageColor {
  RED
  YELLOW
  GREEN
}

// ==========================================
// MODELOS REQUERIDOS POR AUTH.JS (NEXT-AUTH)
// ==========================================

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// ===============================
// USER MODEL (SaaS Ready)
// ===============================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String?   // <-- Hecho opcional porque el login de Google no da password
  emailVerified DateTime? // <-- Requerido por Auth.js
  image         String?   // <-- Requerido para la foto de perfil de Google
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  audits        Audit[]

  @@index([email])
}

// ===============================
// AUDIT MODEL (Core Engine)
// ===============================

model Audit {
  id                String       @id @default(uuid())
  industry          IndustryType
  status            AuditStatus  @default(PROYECTO)

  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  // -------------------------------
  // BLOQUE 1: FINANZAS
  // -------------------------------
  ticketAvg         Decimal      @db.Decimal(12, 2)
  costDirectPercent Decimal      @db.Decimal(5, 2)
  fixedCosts        Decimal      @db.Decimal(12, 2)
  desiredSalary     Decimal      @db.Decimal(12, 2)
  marketingSpend    Decimal      @db.Decimal(12, 2) @default(0)
  emergencyFund     Int
  operatingDays     Int
  
  // <-- NUEVO: Guardamos la ocupación real del negocio
  occupancy         Decimal      @db.Decimal(5, 2) @default(20) 

  // -------------------------------
  // BLOQUE 2: MERCADO
  // -------------------------------
  visibilityScore   Int
  competitionScore  Int
  differentiation   Int

  // -------------------------------
  // BLOQUE 3: CAPACIDAD
  // -------------------------------
  capacityPerDay    Int
  taxStatus         TaxStatus
  digitalScore      Int

  // -------------------------------
  // RESULTADOS CACHEADOS
  // -------------------------------
  finalScore        Int?
  breakEvenPoint    Decimal?     @db.Decimal(12, 2)
  ltvCacRatio       Decimal?     @db.Decimal(12, 2)
  netProfit         Decimal?     @db.Decimal(12, 2)
  
  fullDiagnosis     Json?        

  // -------------------------------
  // RELACIÓN CON USUARIO
  // -------------------------------
  userId            String?
  user              User?        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([industry])
  @@index([status])
  @@index([userId])
}

// ===============================
// DIAGNOSTIC MESSAGES ENGINE
// ===============================

model DiagnosticMessage {
  id            Int                @id @default(autoincrement())
  category      DiagnosticCategory
  industry      IndustryType?
  status        AuditStatus?
  minScore      Int
  maxScore      Int
  conditionKey  String?
  message       String             @db.Text
  color         MessageColor
  createdAt     DateTime           @default(now())

  @@index([category])
  @@index([industry])
  @@index([status])
}